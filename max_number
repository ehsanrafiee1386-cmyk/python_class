#max_number

number_list = []
def menu():


    print("1)add number")
    print("2)biggest number")
    print("0)exit")
    
def max_number(number_list):
    return max(number_list)
    
    
    
while True:
    menu()    
    
    option= int(input("enter your option:"))

    if option == 1:
        num = int(input("enter your number:"))
        number_list.append(num)

    elif option == 2:   
        bi = max(number_list)
        print(bi)

    elif option == 0:
        break


    else:
        print("invalid option")

